{
  "manifest_version": 2,

  "name": "dicom-image-viewer",
  "description": "This extension allows the user to view dicom image",
  "version": "1.0",
  "background": {
      "scripts": [
        "background.js"
      ]
  },
  "icons": { "16": "icon16.png",
    "48": "icon48.png",
   "128": "icon128.png" },
  "browser_action": {
    "default_title": "DICOM image viewer (just open file !)"
  },
  "web_accessible_resources": [
     "index.html"
  ],
  "permissions": [
    "file://*/*",
    "webRequest",
    "webRequestBlocking"
  ]
}
